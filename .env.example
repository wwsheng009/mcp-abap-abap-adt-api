# ============================================
# SAP Connection Settings
# ============================================

# Connection Type Selection (Optional)
# Determines which connection method to use. If not set, auto-detects based on available variables.
# Options: "http" or "rfc"
# Default: Auto-detect (prefers "http" if SAP_URL is set, otherwise "rfc")
# SAP_CONNECTION_TYPE=http

# -----------------------
# HTTP Connection Method
# -----------------------
# Use HTTP to connect to SAP ADT
SAP_URL=https://example.sap-server.com:44300
SAP_USER=EXAMPLE_USER
SAP_PASSWORD=your_password_here
SAP_CLIENT=100
SAP_LANGUAGE=EN

# -----------------------
# RFC Connection Method (Alternative)
# -----------------------
# Use RFC (Remote Function Call) to connect directly to SAP via SAP NW RFC SDK
# You can configure both HTTP and RFC parameters and use SAP_CONNECTION_TYPE to choose.
#
# Required for RFC:
# SAP_HOST=your-sap-host          # SAP application server host
# SAP_SYSNR=00                    # SAP system number (two digits)
# SAP_USER=EXAMPLE_USER
# SAP_PASSWORD=your_password_here
# SAP_CLIENT=100
#
# Optional RFC settings:
# SAP_LANGUAGE=EN
# SAP_ROUTER=/H/routing-host     # SAP router string (e.g., /H/router.company.com/S/3299)
#
# Load Balancing (alternative to direct connection):
# SAP_R3NAME=ERP                  # SAP system name for load balancing
# SAP_MSHOST=msg.your-company.com # Message server host for load balancing
# SAP_GROUP=PUBLIC                # Login group for load balancing (default: PUBLIC)
#
# Note: RFC requires node-rfc optional dependency and SAP NW RFC SDK installed
# See https://www.npmjs.com/package/node-rfc for installation instructions


# MCP Server Settings
# MCP_TOOLS: Tool groups to enable (minimal, standard, advanced, full, or comma-separated list)
MCP_TOOLS=full
# MCP_PORT: Port for HTTP/SSE server (only used when running http-server)
MCP_PORT=3000

# Logging Settings (all have defaults - these are optional overrides)
# LOG_LEVEL: Log level (debug, info, warn, error, none) - default: info
# LOG_DIR: Directory for log files - default: ./logs/
# LOG_CONSOLE: Enable console logging - default: true
# LOG_FILE: Enable file logging - default: true
# LOG_STDIO: Enable stdio (stderr) logging - default: true
#
# Example - Override defaults:
# LOG_LEVEL=debug
# LOG_DIR=/var/log/mcp
# LOG_CONSOLE=false
# LOG_FILE=false
